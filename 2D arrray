#include <vector>

bool search2D(int arr[][4],int rowsize,int colsize,int  target){
 for(int i=0;i<rowsize;i++){
   for(int j =0;j<colsize;j++){
     if(arr[i][i]==target){
       return true;
     }
   }
 }
  //array traverse ho chuki 
  //element not found 
  //return false
  return false;
}

